{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "outDir": "./out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types",
      "@types"
    ],
    "jsx": "react",
    "lib": [ "es5", "es2015", "dom", "scripthost" ]
  },
  "exclude": [
    "node_modules"
  ]
}
